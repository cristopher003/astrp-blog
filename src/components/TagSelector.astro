---
import { getAllTags } from "@/utils/getAllTags"
import { Icon } from "astro-icon/components";

const tag= await getAllTags();

// import { Icon} from 'astro-icon/components';

---

  
<div class="gap-3 flex flex-wrap">

<span  id="open" class="w-12 h-12 rounded-full grid place-items-center border  border-x-zinc-700 cursor-pointer ">
    <Icon class="text-white text-2xl" name="lucide:list-filter"></Icon>
</span>

<div  id="selector" class="opacity-0 transition-opacity">
    {
        tag.map((tag)=>(
            <a href={`/blog/tag/${tag.toLocaleLowerCase()}`} >
            <span  class="border-extra-soft-white mt-4 mx-1 self-start rounded border px-2 py-1 text-zinc-400">
                {tag}
            
            </span>
        </a>
        ))
    }
</div>

</div>

<script data-astro-rerun>

document.getElementById("open").addEventListener("click",()=>{
    const selector=document.getElementById("selector");
    selector?.classList.toggle("opacity-0");
})

</script>